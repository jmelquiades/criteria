<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ple_sale_view_form" model="ir.ui.view">
        <field name="name">ple.sale.view.form</field>
        <field name="model">ple.sale</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="update_data_lines" string="Actualizar InformaciÃ³n" type="object" states="draft"/>
                    <button name="action_generate_report" string="Generar Reporte" type="object" states="draft"/>
                    <button name="action_close" string="Declarar a SUNAT" states="load" type="object"/>
                    <button name="action_rollback" string="Regresar a Borrador" states="closed" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <!-- <field name="date_start"/>
                            <field name="date_end"/> -->
                            <label for="period_year" string="Period"/>
                            <div>
                                <field name="period_month" placeholder="Month" class="oe_inline"/>
                                <field name="period_year" placeholder="Year" class="oe_inline"/>
                            </div>
                            <field name="company_id"/>
                        </group>
                        <group>
                            <field name="date_ple"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="detalle" string="Detalle">
                            <field name="line_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="invoice_id"/>
                                    <field name="number_origin"/>
                                    <field name="date_invoice"/>
                                    <field name="date_due"/>
                                    <field name="voucher_sunat_code"/>
                                    <field name="series"/>
                                    <field name="correlative"/>
                                    <field name="customer_document_type"/>
                                    <field name="customer_document_number"/>
                                    <field name="customer_name"/>
                                    <field name="amount_export"/>
                                    <field name="amount_untaxed"/>
                                    <field name="discount_tax_base"/>
                                    <field name="currency_rate"/>
                                </tree>
                            </field>
                        </page>
                        <page name="report" string="Report">
                            <group>
                                <group name="txt" string="TXT">
                                    <field name="txt_filename" invisible="1"/>
                                    <field name="txt_binary" filename="txt_filename" readonly="1"/>
                                </group>
                                <group name="xlsx" string="XLSX">
                                    <field name="xlsx_filename" invisible="1"/>
                                    <field name="xlsx_binary" filename="xlsx_filename" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <!-- <page name="report_8_2" string="Report 8.2">
                            <group>
                                <group name="txt" string="TXT">
                                    <field name="txt_filename_8_2" invisible="1"/>
                                    <field name="txt_binary_8_2" filename="txt_filename_8_2" readonly="1"/>
                                </group>
                                <group name="xlsx" string="XLSX">
                                    <field name="xlsx_filename_8_2" invisible="1"/>
                                    <field name="xlsx_binary_8_2" filename="txt_filename_8_2" readonly="1"/>
                                </group>
                            </group>
                        </page> -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ple_sale_view_tree" model="ir.ui.view">
        <field name="name">ple.sale.view.tree</field>
        <field name="model">ple.sale</field>
        <field name="arch" type="xml">
            <tree>
                <!-- <field name="date_start"/>
                <field name="date_end"/> -->
                <field name="period_month"/>
                <field name="period_year"/>
                <field name="company_id"/>
                <field name="state"/>
                <field name="txt_filename"/>
                <!-- <field name="txt_filename"/> -->
            </tree>
        </field>
    </record>
    <record id="ple_sale_action" model="ir.actions.act_window">
        <field name="name">Reportes Ventas</field>
        <field name="res_model">ple.sale</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Cree un nuevo registro</p>
        </field>
    </record>
    <menuitem id="ple_sale_rmt_menu" name="Reportes Ventas" action="ple_sale_action" parent="ple_base.ple_base_rmt_menu" sequence="2"/>
    <menuitem id="ple_sale_rg_menu" name="Reportes Ventas" action="ple_sale_action" parent="ple_base.ple_base_rg_menu" sequence="2"/>
    <!-- <menuitem id="ple_sale_menu" name="Reportes PLE" action="ple_sale_action" web_icon="ple_sale,static/img/app.png"/> -->
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_invoice_document_type_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="after">
                <field name="correlative"/>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="inside">
                <group string="InformaciÃ³n PLE">
                    <field name="ple_state"/>
                    <field name="its_declared"/>
                </group>
            </xpath>
            <xpath expr="//page[@name='other_info']" position="after">
                <page name="ple_sunat" string="PLE Ventas" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}">
                    <group>
                        <field name="move_period" attrs="{'readonly': [('state', 'not in', 'draft')]}"/>
                        <field name="exchange_inconsistent" attrs="{'readonly': [('state', 'not in', 'draft')]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
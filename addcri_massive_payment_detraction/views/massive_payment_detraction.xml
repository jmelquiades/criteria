<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="massive_payment_detraction_view_form" model="ir.ui.view">
        <field name="name">massive.payment.detraction.view.form</field>
        <field name="model">massive.payment.detraction</field>
        <field name="arch" type="xml">
            <form string="Pagos masivos de detracción">
                <header>
                    <button string="Facturas por pagar detracciones" name="get_account_moves_for_payment_detraccion" type="object" class="oe_highlight"/>
                    <!-- <button string="Generar txt" name="get_massive_payment_txt" type="object" class="oe_highlight"/> -->
                </header>
                <sheet>
                    <group>
                        <!-- <field name="name"/> -->
                        <field name="txt_filename" invisible="1"/>
                        <field name="txt_binary" filename="txt_filename" readonly="1"/>
                    </group>
                    <notebook>
                        <page name="detail" string="Factura para pagos masivos">
                            <field name="move_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="move_type"/>
                                    <field name="l10n_pe_dte_detraction_amount"/>
                                    <field name="amount_total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="massive_payment_detraction_view_tree" model="ir.ui.view">
        <field name="name">massive.payment.detraction.view.tree</field>
        <field name="model">massive.payment.detraction</field>
        <field name="arch" type="xml">
            <tree string="Pago masivo de detracción">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="massive_payment_detraction_action" model="ir.actions.act_window">
        <field name="name">Pago masivo de detracción</field>
        <field name="res_model">massive.payment.detraction</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Crea un registro</p>
        </field>
    </record>
    <menuitem id="massive_payment_detraction_menu" name="Pago masivo de detracciones" action="massive_payment_detraction_action" sequence="9"/>
</odoo>
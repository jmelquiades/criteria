<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_country_tree_inherit_l10n_pe_country_code" model="ir.ui.view">
        <field name="name">res.country.view.list.inherit</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="l10n_pe_country_code"/>
            </xpath>
        </field>
    </record>
    <record id="view_country_form_inherit_l10n_pe_country_code" model="ir.ui.view">
        <field name="name">res.country.view.form.inherit</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="l10n_pe_country_code"/>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="l10n_latam_document_type_inherit_module_extended" model="ir.ui.view">
    <field name="name">l10n_latam.document.type.view.form.inherit</field>
    <field name="model">l10n_latam.document.type</field>
    <field name="inherit_id" ref="l10n_latam_invoice_document.view_document_type_form"/>
    <field name="arch" type="xml">
         <field name="internal_type" position="after">
               <field name="use_in_expense" widget="boolean_toggle"/>
        </field>
        <!-- Active Buttoms -->
        <xpath expr="/form" position="attributes">
            <attribute name="create">1</attribute>
            <attribute name="edit">1</attribute>
        </xpath>
    </field>
</record>
<record id="l10n_latam_document_view_tree_inherit_module_extended" model="ir.ui.view">
    <field name="name">l10n_latam.document.type.view.tree.inherit</field>
    <field name="model">l10n_latam.document.type</field>
    <field name="inherit_id" ref="l10n_latam_invoice_document.view_document_type_tree"/>
    <field name="arch" type="xml">
        <field name="country_id" position="after">
               <field name="use_in_expense" widget="boolean_toggle"/>
        </field>
        <!-- Active Buttoms -->
        <xpath expr="/tree" position="attributes">
            <attribute name="create">1</attribute>
            <!-- <attribute name="edit">1</attribute> -->
        </xpath>
    </field>
</record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_expense_inherit_module_extended_view_form" model="ir.ui.view">
        <field name="name">hr.expense.view.form.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="before">

                <field name="l10n_latam_document_type_id" attrs="{'readonly': [('state', '!=', 'draft')]}"  
                                    domain="[('use_in_expense', '=', True)]" 
                                    options="{'no_open': True, 'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='tax_ids']" position="before">
                <field name="igv"  attrs="{
                                    'invisible': [('product_has_cost', '=', True)],
                                    'readonly': [('state', '!=', 'draft')]}" />
                <field name="rc" attrs="{
                                    'readonly': [('state', '!=', 'draft')]}" />
                <field name="redondeo" attrs="{
                                    'readonly': [('state', '!=', 'draft')]}" />
                
                
            </xpath>
        </field>
    </record>

    <record id="hr_expense_inherit_module_extended_view_tree" model="ir.ui.view">
        <field name="name">hr.expense.view.tree.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_my_expenses_tree"/>
        <field name="arch" type="xml">
            <field name="payment_mode" position="after">
                <field name="l10n_latam_document_type_id"/>
            </field>
        </field>
    </record>

    <!-- model=hr.expense.sheet -->
    <record id="hr_expense_sheet_inherit_module_extended_view_form" model="ir.ui.view">
        <field name="name">hr.expense.sheet.view.form.inherit</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="l10n_latam_document_type_id" domain="[('use_in_expense', '=', True)]" options="{'no_open': True, 'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>